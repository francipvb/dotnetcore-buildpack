#!/usr/bin/env bash
# bin/detect <build-dir>

BP_DIR="$(cd $(dirname $0)/.. && pwd)"

# We need the valid_project function
source $BP_DIR/lib/utils

for project in $(find $1 -name *.csproj); do
  if valid_project $project; then
    echo Found $(basename $project)
    exit 0
  fi
done

echo Can't find a proper project